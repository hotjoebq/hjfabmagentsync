# Set default behavior for line endings
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.pkl binary
*.joblib binary
*.h5 binary
*.pb binary

# Large files (use Git LFS if needed)
*.csv filter=lfs diff=lfs merge=lfs -text
*.parquet filter=lfs diff=lfs merge=lfs -text
*.xlsx filter=lfs diff=lfs merge=lfs -text
